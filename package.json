{
  "name": "tymind",
  "version": "0.0.2",
  "type": "module",
  "description": "A mind map library built with TypeScript",
  "keywords": [
    "typescript",
    "mind map",
    "library"
  ],
  "author": {
    "name": "tianyiiiii",
    "email": "2739022972@qq.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ztygod/tymind"
  },
  "homepage": "https://github.com/ztygod/tymind",
  "bugs": {
    "url": "https://github.com/ztygod/tymind/issues"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write .",
    "test": "vitest run",
    "prepare": "husky",
    "build": "vite build && tsc -p tsconfig.build.json",
    "prepublishOnly": "pnpm run build",
    "release": "standard-version"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.1",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^2.1.2"
  }
}
